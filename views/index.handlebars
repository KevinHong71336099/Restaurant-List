<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img
          src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt="我的餐廳清單"
        />
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳"
            aria-label="Restaurant Name..."
            {{#if keyword}}value="{{keyword}}"{{/if}}
            aria-describedby="search-button"
          />
          <!-- category -->
          <div class="ml-2">
            <select
              id="search-categories"
              name="category"
              class="form-control"
              aria-label="select by category"
              {{#if category}}data-value={{ category }} {{/if}}
            >
              <option value="All" selected>所有分類</option>
              <option value="日本料理">日本料理</option>
              <option value="義式餐廳">義式餐廳</option>
              <option value="美式">美式</option>
              <option value="咖啡">咖啡</option>
              <option value="中東料理">中東料理</option>
              <option value="酒吧">酒吧</option>
            </select>
          </div>
          <!-- rating -->
          <div class="ml-2">
            <select
              id="search-rating"
              name="rating"
              class="form-control"
              aria-label="select by rating"
              {{#if rating}}data-value={{ rating }} {{/if}}
            >
              <option value="0" selected>所有分數</option>
              <option value="4.5">4.5 星以上</option>
              <option value="4">4 星以上</option>
              <option value="3.5">3.5 星以上</option>
              <option value="3">3 星以上</option>
            </select>
          </div>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{#if notFound}}
  <div class="alert alert-danger mt-3 mx-auto" role="alert">
    找不到符合條件的餐廳，請重新輸入
  </div>
{{/if}}

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <div class="card mb-3">
              <img
                class="card-img-top"
                src="{{this.image}}"
                alt="{{this.name}}"
              />
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{this.category}}
                </div>

                <span class="badge rounded-pill text-bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/index.js"></script>